<div class="container text-center">
    <div class="row">
        <div class="col-1">&nbsp;</div>
        <div class="col bg-primary">
            <nav class="navbar bg-primary navbar-expand-lg" data-bs-theme="dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">SISTEMA WEB</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-link active" aria-current="page" href="/">Cadastrar</a>
                            <a class="nav-link" href="/consulta">Consultar</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="col-1">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-1">&nbsp;</div>
        <div class="col bg-white">
            <h5 class="text-start">atualizar - Agendamento de Potenciais Clientes</h5>
            <p class="text-start fs-6">Sistema Utilizado para agendamento de serviços.</p>
            <form action="/atualizar{{id}}" method="POST">
                {{#each post}}
                <div class="mb-3 text-start">
                    <label class="form-label">Nome:</label>
                    <input type="text" name="nome" class="form-control" id="nome" value="{{nome}}" required>
                </div>
                <div class="mb-3 text-start">
                    <label class="form-label">Telefone:</label>
                    <input type="tel" name="telefone" class="form-control" id="telefone" value="{{telefone}}" required>
                </div>
                <div class="mb-3 text-start">
                    <label class="form-label" name="origem" id="origem">Origem:</label>
                    <select name="origem" class="form-select" aria-label="Default select example" required>
                        <option value="celular"{{#if post.origem}} {{#equal post.origem "celular"}} selected{{/equal}}{{/if}}>Celular</option>
                        <option value="whatsapp"{{#if post.origem}} {{#equal post.origem "whatsapp"}} selected{{/equal}}{{/if}}>whatsapp</option>
                        <option value="telefone_fixo"{{#if post.origem}} {{#equal post.origem "telefone_fixo"}} selected{{/equal}}{{/if}}>telefone_fixo</option>
                        </option>
                    </select>
                </div>
                <div class="mb-3 text-start">
                    <label class="form-label">Data do Contato:</label>
                    <input type="date" name="data_contato" class="form-control" id="data_contato"
                        value="{{data_contato}}" required>
                </div>
                <div class="mb-3 text-start">
                    <label class="form-label">Observação:</label>
                    <textarea name="observacao" class="form-control" placeholder="" id="observacao"
                        style="height: 100px">{{observacao}}</textarea>
                </div>
                <div class="mb-3 text-start">
                    <button type="submit" class="btn btn-primary">Atualizar</button>
                </div>
                {{/each}}
            </form>
        </div>
        <div class="col-1">&nbsp;</div>
    </div>
</div>